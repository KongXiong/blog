.container-fluid
  - @post.each do |post|
    .row.col-md-4.col-md-offset-1
      .panel.panel-default
        .panel-heading
          %h3
            = post.title
        .panel-body
          %h5.row
            = post.description
          .row
            = post.body
      =link_to "delete", authors_post_path(post), method: :delete